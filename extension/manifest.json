{
  "name": "FæktChɛk",
  "description": "Verifying the truth has never been easier! ",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["activeTab", "contextMenus", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
